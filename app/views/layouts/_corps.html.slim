header#bandeau_top
  a{href="/"}
    = image_tag "norev.png"
  h1
    = raw "#{yield :page_title}" || "Raid NOREV 2018"
    
div#flash_message
  - flash.each do |name, msg|
    - if msg.kind_of?(Array)
      - msg = msg.join(";")
    = content_tag :section, msg.html_safe, :id => "flash_#{name}" if (!msg.nil? && ([:notice, :alert, :error].include? name.to_sym))

